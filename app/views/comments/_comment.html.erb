<div class="comment">
  <p class="comments-content"><%= comment.content %></p>
  <p class="comment-posted-by">BY: <%= comment.user.email %> <%= time_ago_in_words(comment.created_at)
     %> ago </p>
     <div class="links">
       <% if comment.user_id == current_user.id %>
       <%= link_to "Edit", edit_message_comment_path(comment.message, comment), class: " btn btn-info btn-xs" %>
       <%= link_to "Delete", message_comment_path(comment.message, comment), method:
       :delete, data: { confirm: "Are you sure , Still wanna delete the comment" }, class: "btn btn-danger btn-xs" %>
       <% end %>

  </div>
</div>
